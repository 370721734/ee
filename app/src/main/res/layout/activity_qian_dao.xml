<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroudcolor"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroudcolor"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:layout_weight="8"
                android:gravity="center"
                android:text="用户任务中心"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:visibility="gone" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/item_qiandao_bg">

            <TextView
                android:id="@+id/tv_jin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="25dp"
                android:text="我的金币: "
                android:textColor="#ff585858"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_qiandao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_jin"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:background="@drawable/item_qian"
                android:gravity="center"
                android:text="签到"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <GridView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:horizontalSpacing="10dp"
                android:numColumns="9"
                android:padding="1px"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_jin"
                android:verticalSpacing="2dp">
            </GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/time"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@mipmap/one_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="今天"
                        android:textColor="#fffca714"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@mipmap/two_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="2天"
                        android:textColor="#ff757575"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_three"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@mipmap/three_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="3天"
                        android:textColor="#ff757575"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_four"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@mipmap/frou_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="4天"
                        android:textColor="#ff757575"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_five"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@mipmap/five_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="5天"
                        android:textColor="#ff757575"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_six"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@mipmap/six_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="6天"
                        android:textColor="#ff757575"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_serven"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@mipmap/serven_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="7天"
                        android:textColor="#ff757575"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:text="任务奖励"
            android:textColor="#fff8f8f8"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="20dp"
            android:background="@drawable/item_qiandao_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="@dimen/sp_14"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="15dp"
                    android:background="#FA8C4B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="13dp"
                    android:text="任务"
                    android:textColor="#ff484747"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_pinglun_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="评论"
                    android:textColor="#ff484747"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/tv_pinglun_text"
                    android:src="@mipmap/zhangli_icon" />

                <TextView
                    android:id="@+id/tv_zhanli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_icon"
                    android:text="5"
                    android:textColor="#fffa8c4b"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="42dp"
                    android:layout_height="6dp"
                    android:layout_below="@id/tv_pinglun_text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_pinlen_pro" />

                <TextView
                    android:id="@+id/tvview_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/view"
                    android:text="0"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvview_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvview_text"
                    android:text="/1"
                    android:textColor="#9E9D9D"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_lin"
                    android:gravity="center"
                    android:text="领取"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D2D2D2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_pinglun_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="转发"
                    android:textColor="#ff484747"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/tv_pinglun_text2"
                    android:src="@mipmap/zhangli_icon" />

                <TextView
                    android:id="@+id/tv_zhanli2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_icon2"
                    android:text="5"
                    android:textColor="#fffa8c4b"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="42dp"
                    android:layout_height="6dp"
                    android:layout_below="@id/tv_pinglun_text2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_pinlen_pro" />

                <TextView
                    android:id="@+id/tvview_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text2"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/view2"
                    android:text="0"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvview_text12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvview_text2"
                    android:text="/1"
                    android:textColor="#9E9D9D"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_lin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_lin"
                    android:gravity="center"
                    android:text="领取"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D2D2D2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_pinglun_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="发布作品"
                    android:textColor="#ff484747"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/tv_pinglun_text3"
                    android:src="@mipmap/zhangli_icon" />

                <TextView
                    android:id="@+id/tv_zhanli3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_icon3"
                    android:text="5"
                    android:textColor="#fffa8c4b"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="42dp"
                    android:layout_height="6dp"
                    android:layout_below="@id/tv_pinglun_text3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_pinlen_pro" />

                <TextView
                    android:id="@+id/tvview_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text3"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/view3"
                    android:text="0"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvview_text13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text3"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvview_text3"
                    android:text="/1"
                    android:textColor="#9E9D9D"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_lin3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_lin"
                    android:gravity="center"
                    android:text="领取"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D2D2D2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_pinglun_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="赠送礼物"
                    android:textColor="#ff484747"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@id/tv_pinglun_text4"
                    android:src="@mipmap/zhangli_icon" />

                <TextView
                    android:id="@+id/tv_zhanli4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_icon4"
                    android:text="5"
                    android:textColor="#fffa8c4b"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="42dp"
                    android:layout_height="6dp"
                    android:layout_below="@id/tv_pinglun_text4"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/item_pinlen_pro" />

                <TextView
                    android:id="@+id/tvview_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text4"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/view4"
                    android:text="0"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvview_text14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_pinglun_text4"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/tvview_text4"
                    android:text="/1"
                    android:textColor="#9E9D9D"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_lin4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_lin"
                    android:gravity="center"
                    android:text="领取"
                    android:textColor="#fffa8c4b"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="#D2D2D2" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>