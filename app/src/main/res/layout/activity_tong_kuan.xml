<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    android:orientation="vertical"
    tools:context=".message.souye.TongKuanActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/tong_bg" />


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="31dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="同款视频"
                android:textColor="#ffefeded"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/shape"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:padding="7dp"
                android:src="@mipmap/zhuanfa" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/rl1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="34dp">

            <ImageView
                android:id="@+id/iv_video_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/mine_bg" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="26dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/play_icon" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rl2"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/rl2"
            android:text=""
            android:singleLine="true"
            android:textColor="#fffbfbff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/rl2"
            android:text="可乐记得加冰  >"
            android:singleLine="true"
            android:textColor="#ff878787"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_memo"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/rl2"
            android:text=""
            android:singleLine="true"
            android:textColor="#ff878787"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="78dp"
            android:layout_height="28dp"
            android:visibility="gone"
            android:layout_alignBottom="@id/rl2"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/rl2"
            android:background="@drawable/tong_xing"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:src="@mipmap/tong_xing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="收藏"
                android:textColor="#ffeff3f4"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/m_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewtong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10" />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Translate" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <RelativeLayout
        android:id="@+id/nodingdan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/notongkuan"
            />
    </RelativeLayout>


</LinearLayout>