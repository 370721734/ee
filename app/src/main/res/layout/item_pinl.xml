<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/backgroudcolor"
    android:layout_height="95dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tou_image"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:src="@mipmap/tou_deault"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="张清河"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_toRightOf="@id/tou_image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignTop="@id/tou_image"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_zanle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钻视tv迭代中，敬请期待..."
        android:layout_toRightOf="@id/tou_image"
        android:layout_below="@id/tv_name"
        android:textColor="#ffa5a4a4"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_who"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论了你的作品"
        android:textColor="#D8D5D5"
        android:layout_below="@id/tv_zanle"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/tou_image"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-7-10"
        android:textColor="#D8D5D5"
        android:layout_below="@id/tv_zanle"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        android:layout_toRightOf="@id/tv_who"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:src="@mipmap/zan_icon"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentRight="true"/>
</RelativeLayout>