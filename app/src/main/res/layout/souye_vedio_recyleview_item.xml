<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/souye_page_video_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">


     <com.dueeeke.videoplayer.player.VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />




      <ImageView
          android:id="@+id/souye_page_video_thumb"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@mipmap/logo"
          android:scaleType="centerCrop"/>


    <!--
          <com.facebook.drawee.view.SimpleDraweeView
              android:id="@+id/souye_page_video_thumb"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
          />
      -->

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:id="@+id/ll_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout_heart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:gravity="center">

                        <!-- 点赞-->
                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/icon_video_heart" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_commit"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="3dp"
                    android:src="@mipmap/icon_video_commit" />

                <TextView
                    android:id="@+id/tv_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_gift"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginBottom="15dp"
                    android:src="@mipmap/gift" />


                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="3dp"
                    android:src="@mipmap/icon_video_share" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <com.jarhero790.eub.widget.Music
                        android:id="@+id/m"
                        app:musicimg="@mipmap/music1"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <com.jarhero790.eub.widget.Music2
                        android:id="@+id/m2"
                        app:musicimg="@mipmap/music2"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="35dp"
                        android:src="@mipmap/music"
                        android:id="@+id/circleImageView"
                        android:layout_height="60dp" />
                </RelativeLayout>




            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="90dp">


                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="top"
                    android:layout_below="@id/tv_uname"
                    android:lineSpacingExtra="3dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="top"
                    android:text="遨游"
                    android:textColor="#FFEEEEEE"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btn_attention"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tv_uname"
                    android:text="+关注"
                    android:textColor="#FFEEEEEE"
                    android:background="@drawable/button_shape3"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


