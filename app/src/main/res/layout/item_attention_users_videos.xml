<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framelayout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/backgroudcolor"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/attentionsUserIcon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/attentionsUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:gravity="center"
            android:src="@mipmap/logo"
            android:text="遨游互动有限公司"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/attentionsButton"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape1"
            android:gravity="center"
            android:text="已关注"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/dp_10">

        <com.dueeeke.videoplayer.player.VideoView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:background="#222222" />
        <ImageView
            android:id="@+id/iv_deault"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
             />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="14dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="19dp"
            android:src="@mipmap/play_pause_icon" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="43dp"
            android:layout_marginBottom="16dp"
            android:layout_toLeftOf="@id/iv_play"
            android:text="钻视tv迭代开发火热进行中，请耐心等待下一
个版本的到来"
            android:textColor="#ffffffff"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="7-18"
            android:textSize="12dp"
            android:textColor="#6D7079" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="35dp"
                android:gravity="center"
                android:src="@mipmap/icon_video_share" />


            <ImageView
                android:id="@+id/pinglun"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="34dp"
                android:src="@mipmap/videos_pinglun" />

            <ImageView
                android:id="@+id/videolike"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/icon_video_heart" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="#1D1F2B"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zanshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:text=""
            android:textSize="13dp"
            android:textColor="#AAADB6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#434343" />

        <TextView
            android:id="@+id/pingluncontent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="路人甲: 你这个视频不好呀！"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/pingluncontent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="路人乙: 你这个APP的确一般呀！"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="查看全部1000条评论"
            android:textColor="#ffffff" />




    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#434343" />


</LinearLayout>