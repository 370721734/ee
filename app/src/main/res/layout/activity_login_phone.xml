<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:padding="10dp"
        android:src="@mipmap/back" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="93dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:src="@mipmap/logo" />


        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="钻视TV"
            android:textColor="#ffffedbe"
            android:textSize="20sp" />

        <TextView
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rc_dimen_size_7"
            android:text="Drilling TV"
            android:textColor="#ffffedbf"
            android:textSize="11sp" />


        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:layout_marginTop="90dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@mipmap/userphone_icon" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:inputType="phone"
                android:hint="请输入手机号码"
                android:textColorHint="#ffd4cdbc"
                android:textColor="#ffd4cdbc"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD0AF" />

        <RelativeLayout
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivpass"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/userpassword_icon" />

            <TextView
                android:id="@+id/tv_ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:textColor="#fffbf1d6"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@id/tv_ma"
                android:layout_toRightOf="@id/ivpass"
                android:background="@null"
                android:text=""
                android:inputType="number"
                android:hint="请输入验证码"
                android:textColorHint="#ffd4cdbc"
                android:textColor="#ffd4cdbc"
                android:textSize="15sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD0AF" />


        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="99dp"
            android:background="@drawable/login_text_bg"
            android:gravity="center"
            android:text="登陆"
            android:textColor="#ff242424"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="@dimen/rc_dimen_size_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"

                android:src="@mipmap/userface_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rc_dimen_size_6"
                android:text="我已阅读用户协议"
                android:textColor="#ffddd0af"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>