<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="130dp">
<FrameLayout
    android:layout_width="120dp"
    android:background="@android:color/black"
    android:layout_height="130dp">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/gift3"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:adjustViewBounds="true"/>
</FrameLayout>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:src="@mipmap/my_del"/>

    <ImageView
        android:id="@+id/iv_xin"
        android:layout_width="15dp"
        android:layout_height="@dimen/sp_14"
        android:src="@mipmap/my_xin"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/rc_dimen_size_5"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"/>

    <TextView
        android:id="@+id/tv_xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.3w"
        android:layout_toRightOf="@id/iv_xin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"
        android:layout_marginLeft="@dimen/dp_4"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.3w"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        />
    <ImageView
        android:layout_width="11dp"
        android:layout_height="@dimen/sp_14"
        android:src="@mipmap/my_go"
        android:layout_toLeftOf="@id/tv_go"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"
         />
</RelativeLayout>