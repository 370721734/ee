<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlll"
    android:layout_width="120dp"
    android:layout_height="130dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="3dp"
    android:background="@color/backgroudcolor">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:background="@color/backgroudcolor">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/video_deault"
            android:visibility="visible" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/my_del" />

    <ImageView
        android:id="@+id/iv_xin"
        android:layout_width="15dp"
        android:layout_height="@dimen/sp_14"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/rc_dimen_size_5"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"
        android:src="@mipmap/my_xin" />

    <TextView
        android:id="@+id/tv_xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"
        android:layout_toRightOf="@id/iv_xin"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="11dp"
        android:layout_height="@dimen/sp_14"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/rc_dimen_size_7"
        android:layout_toLeftOf="@id/tv_go"
        android:src="@mipmap/my_go" />
</RelativeLayout>