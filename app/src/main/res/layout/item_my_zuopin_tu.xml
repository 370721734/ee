<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlll"
    android:layout_width="126dp"
    android:layout_height="140dp"
    android:layout_marginLeft="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="1dp"
    android:background="@color/backgroudcolor">

    <FrameLayout
        android:layout_width="126dp"
        android:layout_height="140dp"
        android:background="@color/backgroudcolor">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/mine_bg"
            android:visibility="visible" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="40dp"
        android:layout_alignParentRight="true"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="10dp"
            android:src="@mipmap/my_del" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_xin"
        android:layout_width="15dp"
        android:layout_height="@dimen/sp_14"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="9dp"
        android:src="@mipmap/my_xin" />

    <TextView
        android:id="@+id/tv_xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginBottom="9dp"
        android:layout_toRightOf="@id/iv_xin"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="9dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="11dp"
        android:layout_height="@dimen/sp_14"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_toLeftOf="@id/tv_go"
        android:src="@mipmap/my_go" />
</RelativeLayout>