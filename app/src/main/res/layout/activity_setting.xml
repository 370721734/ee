<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:textColor="#EFEDED"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:text="编辑个人资料"/>

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="#ff9f9e9e"
            android:textSize="18sp"
            />
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:visibility="gone"
    android:layout_height="95dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_userimage"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:src="@mipmap/zuanshi_logo" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_userimagetwo"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_alignTop="@+id/iv_pho"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-31dp"
        android:visibility="gone"
        android:src="@mipmap/zuanshi_logo" />

    <ImageView
        android:id="@+id/iv_pho"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:src="@mipmap/phonepic_icon"
        android:layout_centerInParent="true"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击更换头像"
        android:textColor="#ffa5a4a4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="12sp"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="33dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="@dimen/dp_40">
    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称："
        android:layout_centerVertical="true"
        android:textColor="#ffdddada"
        android:textSize="18sp"
        />


    <ImageView
        android:id="@+id/iv_edit_name"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:visibility="gone"
        android:src="@mipmap/edit_icon"/>

    <EditText
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@null"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffa5a4a4"
        android:layout_toRightOf="@id/t3"
        android:layout_toLeftOf="@id/iv_edit_name"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="18sp"
        />

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:background="#E5E5E5"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="@dimen/dp_40">
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个性签名："
        android:layout_centerVertical="true"
        android:textColor="#ffdddada"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/iv_edit_sign"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:visibility="gone"
        android:src="@mipmap/edit_icon"/>

    <EditText
        android:id="@+id/tv_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@id/t1"
        android:layout_toLeftOf="@id/iv_edit_sign"
        android:textColor="#ffa5a4a4"
        android:textSize="18sp"
        />

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:background="#E5E5E5"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="@dimen/dp_40">
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别："
        android:layout_centerVertical="true"
        android:textColor="#ffdddada"
        android:textSize="18sp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tv_text"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/rgroup"
        >

        <RadioButton
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/button_bg"
            android:checked="true"
            android:textColor="#DDDADA"
            android:paddingLeft="@dimen/dp_10"
            android:text="男"/>
        <RadioButton
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:textColor="#DDDADA"
            android:paddingLeft="@dimen/dp_10"
            android:button="@drawable/button_bg"
            android:layout_gravity="center_vertical"
            android:text="女"/>
    </RadioGroup>

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:background="#E5E5E5"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_height="@dimen/dp_40">
    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地区："
        android:layout_centerVertical="true"
        android:textColor="#ffdddada"
        android:textSize="18sp"
        />
    <ImageView
        android:id="@+id/iv_edit_address"
        android:layout_width="19dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginRight="24dp"
        android:src="@mipmap/next_icon"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="深圳市-龙岗区"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_edit_address"
        android:layout_toRightOf="@id/t2"
        android:layout_centerHorizontal="true"
        android:textColor="#ffa5a4a4"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:singleLine="true"
        />

</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:background="#E5E5E5"/>

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登陆"
        android:background="@drawable/exit_bg"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="#ffdddada"
        android:textSize="18sp"
        />


    <TextView
        android:id="@+id/tv_lixi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系我们"
        android:textColor="#ff7c7b7e"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户协议"
        android:textColor="#ff7c7b7e"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>