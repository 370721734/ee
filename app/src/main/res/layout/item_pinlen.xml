<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/tv_pinglun_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:textColor="#ff484747"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        />
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/zhangli_icon"
        android:layout_marginLeft="@dimen/rc_dimen_size_9"
        android:layout_toRightOf="@id/tv_pinglun_text"/>

    <TextView
        android:id="@+id/tv_zhanli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@id/iv_icon"
        android:textColor="#fffa8c4b"
        android:textSize="14sp"
        />

    <View
        android:id="@+id/view"
        android:layout_width="42dp"
        android:background="@drawable/item_pinlen_pro"
        android:layout_below="@id/tv_pinglun_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="6dp"/>
    <TextView
        android:id="@+id/tvview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_toRightOf="@id/view"
        android:layout_below="@id/tv_pinglun_text"
        android:layout_marginTop="@dimen/rc_dimen_size_5"
        android:layout_marginLeft="@dimen/rc_dimen_size_6"
        android:textColor="#fffa8c4b"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tvview_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/1"
        android:layout_toRightOf="@id/tvview_text"
        android:layout_below="@id/tv_pinglun_text"
        android:layout_marginTop="@dimen/rc_dimen_size_5"
        android:textColor="#9E9D9D"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/tv_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="领取"
        android:layout_alignParentRight="true"
        android:background="@drawable/item_lin"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="#fffa8c4b"
        android:layout_marginRight="8dp"
        android:textSize="12sp"
        />
</RelativeLayout>