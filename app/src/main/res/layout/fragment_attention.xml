<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="关 注"
        android:textColor="#ffffff"
        android:textSize="18sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:alpha="0.5"
        android:background="#A0A0A0" />


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroudcolor">

            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll">

                <LinearLayout
                    android:id="@+id/framelayout_container"
                    android:layout_width="70dp"
                    android:layout_height="95dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@color/backgroudcolor"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/attentionsUserIcon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@mipmap/atention_more_icon"
                        circleimageview:civ_border_overlay="false" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/attentionuser_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@id/framelayout_container"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_below="@id/attentionuser_recyclerview"
                    android:alpha="0.5"
                    android:background="#A0A0A0"
                    android:visibility="visible" />
            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/rl_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewAttentionUsers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroudcolor" />
        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>


    <RelativeLayout
        android:id="@+id/rl_no_dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivtext"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@mipmap/no_video_dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivtext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="暂无数据"
            android:textColor="@android:color/white" />
    </RelativeLayout>


</LinearLayout>