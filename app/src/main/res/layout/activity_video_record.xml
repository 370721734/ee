<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_play_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:onClick="onClick"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <FrameLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/record_mask_buttom" />
    </FrameLayout>

    <TextView
        android:id="@+id/record_tv_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="无"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />

    <!--录制-->
    <RelativeLayout
        android:id="@+id/record_layout"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentBottom="true"
        android:background="#4D000000">

        <com.jarhero790.eub.record.RecordProgressView
            android:id="@+id/record_progress_view"
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/progress_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/record_progress_view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="00:00"
            android:visibility="gone"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_time"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:background="@color/transparent"
            android:onClick="onClick"
            android:padding="5dp"
            android:text="横竖屏"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_record_btns"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp">

            <com.jarhero790.eub.record.ComposeRecordBtn
                android:id="@+id/compose_record_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="onClick" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:onClick="onClick"
                    android:src="@drawable/selector_torch_close"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:onClick="onClick"
                    android:src="@drawable/selector_switch_camera"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_local_tu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60dp"
                    android:onClick="onClick"
                    android:src="@mipmap/record_local_tu" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/btn_confirm"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:onClick="onClick"
                    android:src="@drawable/selector_record_confirm" />

                <ImageView
                    android:id="@+id/btn_delete_last_part"
                    android:layout_width="43dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@id/btn_confirm"
                    android:onClick="onClick"
                    android:src="@mipmap/record_repai" />
            </RelativeLayout>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/autoLocateView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@id/layout_record_btns"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/rg_record_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_record_btns"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_slowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="10dp"
                android:text="极慢"
                android:textColor="@drawable/record_speed_selector"
                android:textSize="14sp"
                android:visibility="gone" />


            <RadioButton
                android:id="@+id/rb_fast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="10dp"
                android:text="快"
                android:textColor="@drawable/record_speed_selector"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="10dp"
                android:text="标准"
                android:textColor="@drawable/record_speed_selector"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_slow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="10dp"
                android:text="慢"
                android:textColor="@drawable/record_speed_selector"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_fastest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:padding="10dp"
                android:text="极快"
                android:textColor="@drawable/record_speed_selector"
                android:textSize="14sp"
                android:visibility="gone" />
        </RadioGroup>
    </RelativeLayout>

    <com.jarhero790.eub.record.BeautySettingPannel
        android:id="@+id/beauty_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/back_ll"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/pinlenexit" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_look"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/item_look"
            android:gravity="center"
            android:text="预览"
            android:textColor="#ff020202"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/btn_torch"
            android:layout_width="25dp"
            android:layout_height="29dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/record_shan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_torch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="闪光灯"
            android:textColor="#ffe6e1e1"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn_switch_camera2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp">

        <ImageView
            android:id="@+id/btn_switch_camera"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/record_fazhuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_switch_camera"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="翻转"
            android:textColor="#ffe6e1e1"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_aspect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_scale"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/record_round_bg"
            android:onClick="onClick"
            android:padding="6dp"
            android:src="@drawable/selector_aspect169" />

        <ImageView
            android:id="@+id/iv_scale_mask"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/record_round_bg"
            android:onClick="onClick"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_scale"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="屏比"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_aspect_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@id/layout_aspect"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_scale_first"
            android:layout_width="@dimen/ugc_aspect_width"
            android:layout_height="44dp"
            android:layout_marginRight="@dimen/ugc_aspect_divider"
            android:background="@drawable/record_round_bg"
            android:onClick="onClick"
            android:padding="6dp"
            android:src="@drawable/selector_aspect169" />

        <ImageView
            android:id="@+id/iv_scale_second"
            android:layout_width="@dimen/ugc_aspect_width"
            android:layout_height="44dp"
            android:layout_marginRight="@dimen/ugc_aspect_divider"
            android:layout_toRightOf="@id/iv_scale_first"
            android:background="@drawable/record_round_bg"
            android:onClick="onClick"
            android:padding="6dp"
            android:src="@drawable/selector_aspect169" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_aspect"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_beauty"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_below="@id/iv_scale"
                android:background="@drawable/record_round_bg"
                android:onClick="onClick"
                android:padding="6dp"
                android:src="@mipmap/ugc_record_beautiful_girl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="美颜"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_music_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_beauty"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_music_pannel"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/record_round_bg"
                android:onClick="onClick"
                android:padding="6dp"
                android:src="@mipmap/ugc_record_music" />

            <ImageView
                android:id="@+id/iv_music_mask"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/record_round_bg"
                android:onClick="onClick"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_music_pannel"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="音乐"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <com.jarhero790.eub.record.TCAudioControl
        android:id="@+id/layoutAudioControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/snapshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="截图"
        android:visibility="gone" />
</RelativeLayout>